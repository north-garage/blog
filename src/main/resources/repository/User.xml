<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.north.garage.blog.repository.UserRepository">
    <select id="findByEmail" resultType="io.north.garage.blog.model.User">
        SELECT * FROM users where email = #{email}
    </select>
</mapper>